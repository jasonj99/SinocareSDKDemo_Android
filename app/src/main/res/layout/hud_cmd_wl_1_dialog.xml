<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
            android:background="#FF00C27E"
            android:padding="10dp">

    <LinearLayout
        android:id="@+id/cmd_dialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="选择操作"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_commad_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="读取当前结果" />

        <Button
            android:id="@+id/btn_commad_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="读取历史结果" />

        <Button
            android:id="@+id/btn_commad_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="设置设备时间" />

        <Button
            android:id="@+id/btn_commad_6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="清空历史数据" />

        <Button
            android:id="@+id/btn_commad_8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="关机" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_commad_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="设置校正码" />

            <EditText
                android:id="@+id/et_modifyCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="请输入校正码"
                android:inputType="numberDecimal" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>